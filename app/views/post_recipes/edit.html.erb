<div class="row border rounded bg-light">
  <div class="col-12 col-sm-12 col-md-10 col-xs-5 col-lg-10 offset-lg-1">
    <h2>投稿情報編集</h2>
    <p id="notice" class="text-success"><%= flash[:notice] %></p>
    <%= form_with model:@post_recipe, url:post_recipe_path, local:true  do |f| %>
      <%= render "layouts/error_messages", model: @post_recipe %>

      <div class="form_group col-12">
        <div class="col-xs-5">
          <%= attachment_image_tag @post_recipe, :image, fallback: "no_image.jpg", size: "300x250"%>
        </div>
        <%= f.attachment_field :image, placeholder: "画像", class:"form-control-file"%>
      </div>

      <div class="form_group col-md-12">
        <%= f.label:"難易度", class: "col-sm-3" %><br />
        <%= f.collection_select(:genre_id, @genres, :id, :name, include_blank: "--選択してください--", class:"col-sm-9" )  %>
      </div>

      <%= render 'post_recipes/form', f: f %>
      <!--<div class="form_group col-12">-->
        <!--<%= f.label:"その他・手順", class: "col-sm-3" %><br />-->
        <!--<%= f.fields_for :how_to_makes, @post_recipe.how_to_makes.each do |t| %>-->
        <!--  <div class="mt-5"><%= t.text_area :explanation, :size => "10x5", class: "form-control col-sm-9", placeholder: "その他・手順" %></div>-->
        <!--<% end %>-->
      <!--</div>-->
      <div class="form_group col-md-10">
        <%= f.submit "変更する", class:"btn btn-success"%>
      </div>

    <% end %>
  </div>
</div>
