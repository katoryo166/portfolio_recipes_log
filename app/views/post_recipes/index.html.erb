<div class="row">
  <div class="col-12 col-md-10  col-lg-5 col-xs-4 offset-md-1">
    <h2>投稿一覧</h2>
    <div class="search_form">
      <%= form_with url: search_path, method: :get, local: true do |f| %>
        <div class="input-group">
          <%= f.text_field :keyword, value: @keyword, class:"form-control input-group-prepend" %>
          <span id="btn-search" class="input-group-btn input-group-append">
            <%= f.submit "検索", class:"btn btn-primary"%>
          </span>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="row">
  <%= render 'post_recipes/post_recipes', post_recipes: @post_recipes %>
</div>
<%= paginate @post_recipes %>

