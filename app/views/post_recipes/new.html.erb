<div class="row">
  <div class="col-md-12 col-xs-12 offset-md-1">
    <h2>投稿する</h2>
    <p id ="notice" class="text-success" ><%= flash[:notice] %></p>

      <%= form_with model:@post_recipe, url:post_recipes_path, local:true do |f| %>
      <%= render "layouts/error_messages", model: @post_recipe %>
        <div class="col-xs-4 col-xs-offset-1">
          <div class="form_group col-md-10">
            <%= f.label:"画像" %>
            <%= f.attachment_field :image %>
          </div>
        </div>
        <div class="col-xs-6">
          <div class="form_group col-md-10">
            <%= f.label:"タイトル", class: "col-sm-3" %>
            <%= f.text_field :title, class: "col-sm-9"  %>
          </div>
          <div class="form_group col-md-10">
            <%= f.label:"難易度", class: "col-sm-3" %>
            <%= f.collection_select(:genre_id, @genres, :id, :name, prompt: "-- 選択してください --", class: "col-sm-7") %>
          </div>
          <div class="form_group col-md-10">
            <%= f.label:"材料", class: "col-sm-3" %>
            <%= f.text_area :ingredient, class: "col-sm-9" %>
          </div>
          <div class="form_group col-md-10">
            <%= f.label:"作り方", class: "col-sm-9 explanation" %>
            <%= f.text_area :post_introduction, class: "col-sm-9 explanation" %>
          </div>
          <div class="form_group col-md-10">
            <%= f.submit "投稿する", class:"btn btn-success" %>
          </div>
        </div>

<% end %>
  </div>
</div>