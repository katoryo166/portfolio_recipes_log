<div class="row border rounded bg-light">
  <div class="col-12 col-md-12 col-xs-12 col-lg-10 offset-lg-2">
    <h2>投稿フォーム</h2>
    <p id ="notice" class="text-success" ><%= flash[:notice] %></p>

    <%= form_with model:@post_recipe, url:post_recipes_path, local:true do |f| %>
      <%= render "layouts/error_messages", model: @post_recipe %>
      <div class="col-xs-4">
        <div class="form_group col-md-10">
          <%= f.label:"画像", class: "col-sm-3" %>
          <%= f.attachment_field :image, class: "col-sm-9" %>
        </div>
      </div>
      <div class="col-12 col-md-10 col-xs-12 col-lg-10">
        <div class="form_group col-md-12">
          <%= f.label:"難易度", class: "col-sm-3" %><br />
          <%= f.collection_select(:genre_id, @genres, :id, :name, prompt: "-- 選択してください --", class: "form-control col-sm-9") %>
        </div>
        <%= render 'post_recipes/form', f: f %>
        <div class="form_group col-md-12">
          <%= f.submit "投稿する", class:"btn btn-success" %>
        </div>
      </div>
    <% end %>

  </div>
</div>