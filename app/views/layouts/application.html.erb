<!DOCTYPE html>
<html>
  <head>
    <title>RecipeLog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
  </head>

  <body class="d-flex flex-column">
    <div  id="wrapper">
      <header class="shadow-sm">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
          <div class="container">
            <a class="navbar-brand p-3" href="/"><%= link_to "recipe_log" , root_path, class: 'nav-link text-light' %></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="navbar-nav ml-auto">
                <% if user_signed_in? %>
                  <li class="nav-item">
                    <%= link_to user_path(current_user.id), class: 'nav-link text-light' do %>
                      マイページ
                    <% end %>
                  </li>
                  <li class="nav-item">
                    <%= link_to post_recipes_path , class: 'nav-link text-light' do  %>
                      投稿一覧
                    <% end %>
                  </li>
                  <li class="nav-item">
                    <%= link_to new_post_recipe_path , class: 'nav-link text-light' do  %>
                      投稿する
                    <% end %>
                  </li>
                  <li class="nav-item">
                    <%= link_to destroy_user_session_path, method: :delete , class: 'nav-link text-light' do  %>
                      ログアウト
                    <% end %>
                  </li>
                <% elsif admin_signed_in? %>
                  <li class="nav-item">
                    <%= link_to admin_post_recipes_path, class: 'nav-link text-light' do %>
                      投稿一覧
                    <% end %>
                  </li>
                  <li class="nav-item">
                    <%= link_to admin_genres_path, class: 'nav-link text-light' do %>
                      ジャンル一覧
                    <% end %>
                  </li>
                  <li class="nav-item">
                    <%= link_to admin_users_path, class: 'nav-link text-light' do %>
                      アカウント一覧
                    <% end %>
                  </li>

                  <li class="nav-item">
                    <%= link_to destroy_admin_session_path, method: :delete , class: 'nav-link text-light' do  %>
                      ログアウト
                    <% end %>
                  </li>
                <% else %>
                <li class="nav-item">
                    <%= link_to root_path, class: 'nav-link text-light' do %>
                      Home
                    <% end %>
                  </li>
                  <li class="nav-item">
                    <%= link_to homes_about_path, class: 'nav-link text-light' do %>
                      About
                    <% end %>
                  </li>
                  <li class="nav-item">
                    <%= link_to post_recipes_path, class: 'nav-link text-light' do %>
                      投稿一覧
                    <% end %>
                  </li>
                  <li class="nav-item">
                    <%= link_to new_user_registration_path,  class: 'nav-link text-light' do %>
                      新規登録
                    <% end %>
                  </li>
                  <li class="nav-item">
                    <%= link_to new_user_session_path, class: 'nav-link text-light' do %>
                      ログイン
                    <% end %>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </nav>
      </header>
      <div class="container">
        <%= yield %>
      </div>
      <footer>
        <p>CopyRight</p>
      </footer>
    </div>
  </body>
</html>
