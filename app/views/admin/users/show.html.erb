<div class="row rounded bg-light">
  <div class="col-12 col-sm-12 col-md-10 col-lg-10 offset-md-1">
    <h2><%= @user.name %>のページ</h2>
    <p id="notice" class="text-success"><%= flash[:notice] %></p>
  </div>
    <div class="col-8 col-sm-6 col-md-4 col-lg-2 col-xs-5 ">
    <div class="mypage_img"><%= attachment_image_tag @user, :account_image, fallback: "no_image.jpg", size: "200x200"%></div>
  </div>
  <div class="col-12 col-sm-12 col-md-12 col-lg-8 col-xs-5 ">
    <table class="table table-bordered table-condensed account">
      <tr>
        <th>名前</th>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <th>自己紹介文</th>
        <td><%= @user.introduction %></td>
      </tr>
      <tr>
        <th>アカウント作成日</th>
        <td><%= @user.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
    </table>

    <div class="col-xs-5">
      <%= link_to "編集する", edit_admin_user_path, class:"btn btn-primary" %>
    </div>

  </div>
  </div>


<div class="row">
 <%= render 'post_recipes/post_recipes', post_recipes: @post_recipes %>
</div>