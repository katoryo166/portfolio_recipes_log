<div class="row">
  <div class="col-md-12 col-xs-12 offset-md-1">
    <h2>アカウント一覧</h2>
    <table class="table table-bordered table-condensed">
      <thead>
        <tr>
          <th>名前</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <% @users.each do |user| %>
      <tbody>
        <td>
          <%= link_to admin_user_path(user.id) do %>
            <%= user.name %>
          <% end %>
        </td>
        <td><%= user.email %></td>
        <td>
          <% if user.is_active == true %>
            <p class="text-success">有効</p>
          <% else %>
            <p class="text-danger">無効</p>
          <% end %>
        </td>
      </tbody>
      <% end %>
    </table>
  </div>
</div>