<div class="row  rounded bg-light">
  <div class="col-12 col-md-10 col-lg-10 col-xs-5 offset-md-1">
    <% breadcrumb :user_session %>
    <%= breadcrumbs separator: ">" , class:"pankuzu_list" %>
    <h2>管理者ログイン</h2>
    <p id ="notice" class="text-success" ><%= flash[:notice] %></p>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :"メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-sm-9" %>
      </div>

      <div class="field">
        <%= f.label :"パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control col-sm-9" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="form_group">
        <%= f.submit "Log in", class:"btn btn-success"  %>
      </div>
    <% end %>

    <%= render "admin/admins/shared/links" %>
  </div>
</div>
