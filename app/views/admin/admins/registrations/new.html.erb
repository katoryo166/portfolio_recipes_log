<div class="row rounded bg-light">
  <div class="col-12 col-md-10 col-lg-10 col-xs-5 offset-md-1">
    <h2>管理者 サインアップ</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "admin/admins/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :"メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-sm-9" %>
      </div>

      <div class="field">
        <%= f.label :"パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />

        <%= f.password_field :password, autocomplete: "new-password", class: "form-control col-sm-9" %>
      </div>

      <div class="field">
        <%= f.label :"パスワード確認" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control col-sm-9" %>
      </div>

      <div class="form_group">
        <%= f.submit "Sign up", class:"btn btn-success"%>
      </div>
    <% end %>

    <%= render "admin/admins/shared/links" %>
  </div>
</div>
