<div class="row">
  <div class="col-12 col-md-10  col-xs-4 offset-md-1">
    <h2>ジャンル一覧・追加</h2>
    <p id ="notice" class="text-success" ><%= flash[:notice] %></p>
    <div class="form_group col-12 col-md-10">
      <%= form_with model:@genre, url:admin_genres_path, local:true do |f| %>
        <%= f.label:"ジャンル名", class:"col-sm-3" %>
        <%= f.text_field :name, class:"col-sm-4" %>
        <%= f.submit "追加する", class:"col-sm-3" %>
      <% end %>
    </div>

    <table class="table">
      <thead>
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <% @genres.each do |genre| %>
        <tbody>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集", edit_admin_genre_path(genre.id) %></td>
          </tr>
        </tbody>
      <% end%>
    </table>
  </div>
</div>