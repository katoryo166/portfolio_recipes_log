<div class="row">
  <div class="col-12 col-md-10 col-lg-10 col-xs-4 offset-md-1">
    <h2>ジャンル一覧・追加</h2>
    <p id ="notice" class="text-success" ><%= flash[:notice] %></p>
    <div class="form_group  mx-auto">
      <%= form_with model:@genre, url:admin_genres_path, local:true do |f| %>
        <%= f.label:"ジャンル名", class:"col-sm-9" %>
        <div class="input-group">
          <%= f.text_field :name ,class:"form-control input-group-prepend"%>
          <span class="input-group-btn input-group-append">
            <%= f.submit "追加する", class:"btn btn-success" %>
          </span>
        </div>
      <% end %>
    </div>

    <table class="table bg-white">
      <thead>
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <% @genres.each do |genre| %>
        <tbody>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集", edit_admin_genre_path(genre.id) %></td>
          </tr>
        </tbody>
      <% end%>
    </table>
  </div>
</div>