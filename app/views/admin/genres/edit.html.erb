<div class="row">
  <div class="col-md-12 col-xs-12 offset-md-1">
    <h2>ジャンル編集</h2>
    <div class="form_group col-12 col-md-10">
      <%= form_with model:@genre, url:admin_genre_path, local:true do |f| %>
        <%= f.label:"ジャンル名", class:"col-sm-9" %>
        <div class="input-group">
          <%= f.text_field :name ,class:"form-control input-group-prepend"%>
          <span class="input-group-btn input-group-append">
            <%= f.submit "編集する", class:"btn btn-success" %>
          </span>
        </div>
      <% end %>
    </div>

      <div class="form-group col-12 col-md-10">
        <%= link_to "削除する", admin_genre_path(@genre), class:"btn btn-danger", method: :delete, "data-confirm"=>"削除しますか？" %>
      </div>
  </div>
</div>