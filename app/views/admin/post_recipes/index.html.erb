<div class="row">
  <div class="col-12 col-md-10 col-xs-4 offset-md-1">
    <h2>投稿一覧</h2>
    <p id ="notice" class="text-success" ><%= flash[:notice] %></p>
    <table class="table  table-bordered table-condensed bg-white">
      <thead>
        <tr>
          <th>投稿ID</th>
          <th>投稿者名</th>
          <th>タイトル</th>
          <th>ジャンル  </th>
        </tr>
      </thead>
      <% @post_recipes.each do |post_recipe| %>
          <tbody>
            <tr>
              <td><%= post_recipe.id %></td>
              <td>
                <%= link_to admin_user_path(post_recipe.user.id) do %>
                  <%= post_recipe.user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to admin_post_recipe_path(post_recipe.id) do %>
                  <%= post_recipe.title %>
                <% end %>
              </td>
              <td><%= post_recipe.genre.name %></td>
            </tr>
          </tbody>
      <% end %>
    </table>
  </div>
</div>