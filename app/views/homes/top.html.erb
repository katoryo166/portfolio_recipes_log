<div class="row">
  <div class="jumbotron">
    <div class="container-fluid">
      <h3 class="text-dark">
        簡単なレシピを発信・共有するサイトです。<br />
        <%= link_to "こちらから登録", new_user_registration_path, class:"btn btn-primary btn-sm" %>
      </h3>
    </div>
  </div>
   <div class="col-12 col-md-12 col-xs-5 col-lg-10">
     <p id="notice" class="text-success"><%= flash[:notice] %></p>
    <h2>投稿一覧</h2>
  </div>
  <% @post_recipes.first(3).each do |post_recipe| %>
    <div class="col-12 col-sm-12 col-md-10 col-lg-4">
      <div class="card md-3">
        <div class="card-body">
          <%= link_to post_recipe_path(post_recipe.id) do %>
            <%= attachment_image_tag post_recipe, :image ,format: 'jpeg', fallback: "no_image.jpg", class: "bd-placeholder-img card-img-top", size: "200x200" %>
            <%= post_recipe.title %>
          <% end %>
          <p><%= post_recipe.genre.name %><br />
            <span class="favorite_heart">♥</span><%= post_recipe.favorites.count %>
            コメント<%= post_recipe.post_comments.count %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>

