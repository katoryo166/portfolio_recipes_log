  <div class="col-12 col-md-10 col-lg-8 col-xs-5">

    <div class="example bg-dark ">
      <%= image_tag 'about.jpg', class: 'icon' %>
      <p>ようこそ</p>
    </div>
  </div>
  <div class="col-12 col-md-10 col-lg-8 col-xs-10 offset-md-1">
    <h2 class="mx-auto">About</h2>
    <div class="about_text p-3 col-xs-5">
      <p>
