<div class="row">
  <div class="col-12 col-md-10 col-lg-10 col-xs-5 offset-md-1">
    <h2>アカウント情報編集</h2>
    <%= render "layouts/error_messages", model: @user %>
    <%= form_with model:@user, url:user_path, local:true do |f| %>

      <div class="form_group">
        <div class="mypage_img">
          <%= attachment_image_tag @user, :account_image, fallback: "no_image.jpg", size: "100x100"%>
        </div>
        <%= f.attachment_field :account_image, placeholder: "プロフィール画像", class:"col-xs-5" %>
      </div>

      <table class="table table-bordered table-condensed bg-white">
        <tr>
          <th><%= f.label:"名前" %></th>
          <td><%= f.text_field :name, autofoucus: true, class: "form-control"%></td>
        </tr>
        <tr>
          <th><%= f.label:"自己紹介文" %></th>
          <td><%= f.text_area :introduction, autofoucus: true, :size => "20x5", class: "form-control" %></td>
        </tr>
        <tr>
          <th><%= f.label :"メールアドレス" %></th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %></td>
          </tr>
      </table>

      <div class="form_group col-xs-10 col-xs-offset-2">
        <%= f.submit "変更する", class:"btn btn-success"%>
        <%= link_to "退会する", confirm_unsubscribe_users_path, "data-confirm" => "退会画面に進みますか?", class:"btn btn-danger" %>
      </div>
    <% end %>
  </div>
</div>